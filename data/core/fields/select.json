{
    "type": "core/select",
    "label": "Select",
    "description": "A select field.",
    "fields": {
        "value": {
            "type": "string",
            "multilingual": true,
            "required": true
        }
    },
    "optionsSchema": {
        "choices": {
            "type": "array",
            "items": {
                "type": "core/structure",
                "subItems":{
                    "type": "object"
                }
            },
            "multilingual": true,
            "required": true
        },
        "allowEmpty": {
            "type": "boolean",
            "default": false,
            "label": "Allow Empty",
            "description": "Whether the select can be empty."
        },
        "multiple": {
            "type": "boolean",
            "default": false,
            "label": "Multiple Selection",
            "description": "Allow multiple selections in the select field."
        },
        "placeholder": {
            "type": "string",
            "label": "Placeholder",
            "description": "Placeholder text for the select field."
        }
    }   
}
