{
  "files": [],
  "references": [
    { "path": "packages/types" },
    { "path": "packages/core" },
    { "path": "packages/cli" },
    { "path": "packages/api" }
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@moteur/types/*": ["packages/types/dist/*"],
      "@moteur/core/*": ["packages/core/dist/*"],
      "@moteur/cli/*": ["packages/cli/dist/*"],
      "@moteur/api/*": ["packages/api/dist/*"],
      "@moteur/types": ["packages/types/src"],
      "@moteur/core": ["packages/core/src"],
      "@moteur/cli": ["packages/cli/src"],
      "@moteur/api": ["packages/api/src"]
    },
    "outDir": "dist"
  },
  "include": ["src"]
}
